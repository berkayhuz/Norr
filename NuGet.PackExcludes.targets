    <None Remove="**/*.pdb;**/*.zip;**/*.7z;**/*.tar;**/*.cmd;**/*.bat;**/*.ps1;**/*.sh" />
    <Content Remove="**/*.pdb;**/*.zip;**/*.7z;**/*.tar;**/*.cmd;**/*.bat;**/*.ps1;**/*.sh" />

    <None Remove="**/packages/**;**/artifacts/**;**/node_modules/**" />
